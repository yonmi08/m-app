.main
  .main__header
    .header__join
      - if current_user.groups.blank? and @group.users.size < 5
        = link_to(join_group_path(@group.id), method: :post) do
          = "グループ加入"
    .header__name
      = link_to(root_path(current_user.id)) do
        = current_user.name
    .header__log-out
      = link_to(destroy_user_session_path, method: :delete) do
        = "ログアウト"
  .main__diary
    <canvas id="myChart" width="200" height=90"></canvas>
    <script>draw_graph();</script>
  .main__message
    = render @messages
  .main__form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: "input-box__form", placeholder: "type a message"
        = f.submit 'Send', class: "submit-btn"
  .main-body
    - if @group.event.present?
      .main__close
        .main__close__text
          = simple_format @group.event.fail_text
        = link_to(@group.event.fail_url) do
          .main__close__ogp
            = image_tag tumbnaill_image(@group.event.fail_url), class: "main__close__ogp__img"
            .main__close__ogp__bottom
              .main__close__ogp__bottom__title
                = tumbnaill_title(@group.event.fail_url).truncate(22, omission: '…')
              .main__close__ogp__bottom__content
                = tumbnaill_content(@group.event.fail_url)#.truncate(40, omission: '…')
    - else 
      .main__diary
        - @group_users.each do |user|
          - user.diaries.each do |diary|
            .diary__top-box
              .diary__name
                = diary.date
              .diary__rank
                = diary.point
            .diary__bottom-box
              .diary__text
                = diary.text
    .main-bottom
      .main__message
        = render @messages
      .main__form
        = form_for [@group, @message] do |f|
          .input-box
            = f.text_field :content, class: "input-box__form", placeholder: "type a message"
            = f.submit 'Send', class: "submit-btn"

